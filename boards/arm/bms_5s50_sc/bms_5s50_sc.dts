/dts-v1/;
#include <st/f0/stm32f072Xb.dtsi>

/ {
	model = "Libre Solar BMS 5S50 SC";
	compatible = "st,stm32f072";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		led1: led_0 {
			gpios = <&gpiob 14 GPIO_INT_ACTIVE_HIGH>;
			label = "LED 1";
		};
		led2: led_1 {
			gpios = <&gpiob 15 GPIO_INT_ACTIVE_HIGH>;
			label = "LED 2";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		power_button: button {
			label = "Power Button";
			gpios = <&gpioa 8 GPIO_INT_ACTIVE_LOW>;
		};
	};

	switches {
		compatible = "switch";
		can_en {
			gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
			label = "CAN transceiver enable";
		};
		pchg_en {
			gpios = <&gpiob 2 GPIO_ACTIVE_HIGH>;
			label = "PCHG enable pin";
		};
	};

	inputs {
		compatible = "inputs";
		bq_alert {
			gpios = <&gpiob 12 GPIO_ACTIVE_HIGH>;
			label = "Alert interrupt of bq769x0 IC";
		};
	};

	aliases {
		led-red = &led1;
		led-green = &led2;
		i2c-uext = &i2c1;
		i2c-bms = &i2c2;
		uart-dbg = &usart1;
		sw-pwr = &power_button;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&i2c2 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&spi1 {
	status = "okay";
};

&iwdg {
	status = "okay";
};

&adc1 {
	status = "okay";
};

&can1 {
	bus-speed = <250000>;
	status = "okay";
};
